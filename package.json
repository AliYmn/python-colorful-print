{
  "name": "python-colorful-print",
  "displayName": "Python Colorful Print",
  "description": "Python print colorful out log messages",
  "version": "0.1.5",
  "engines": {
    "vscode": "^1.75.0"
  },
  "publisher": "AliYaman",
  "author": {
    "name": "AliYaman"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AliYmn/python-colorful-print"
  },
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Other"
  ],
  "keywords": [
    "Python",
    "Print",
    "Log",
    "Colorful"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "python",
        "aliases": [
          "Python",
          "Python3"
        ],
        "extensions": [
          ".py"
        ]
      }
    ],
    "commands": [
      {
        "command": "python-colorful-print.colorfulPrint",
        "title": "Colorful Print"
      },
      {
        "command": "python-colorful-print.printAllVariables",
        "title": "Print All Variables"
      },
      {
        "command": "python-colorful-print.removeAllPrints",
        "title": "Remove All Print Statements"
      }
    ],
    "keybindings": [
      {
        "command": "python-colorful-print.colorfulPrint",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorTextFocus"
      },
      {
        "command": "python-colorful-print.printAllVariables",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "editorTextFocus"
      },
      {
        "command": "python-colorful-print.removeAllPrints",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Python Colorful Print Settings",
      "properties": {
        "python-colorful-print.keyColor": {
          "type": "string",
          "default": "#FF0000",
          "description": "Hex color code for the key (variable name) in the print statement",
          "enum": [
            "#FF0000",
            "random"
          ],
          "enumDescriptions": [
            "Hex color code (default red)",
            "Random color for each print"
          ],
          "format": "color"
        },
        "python-colorful-print.valueColor": {
          "type": "string",
          "default": "#00FF00",
          "description": "Hex color code for the value (variable value) in the print statement",
          "enum": [
            "#00FF00",
            "random"
          ],
          "enumDescriptions": [
            "Hex color code (default green)",
            "Random color for each print"
          ],
          "format": "color"
        },
        "python-colorful-print.enableColor": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable colorful output in the print statement"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.7.3",
    "typescript": "^4.8.4"
  }
}
